@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Admin.Exams.CreateModel
@{
    ViewData["Title"] = "Create Exam";
}

<div style="margin-bottom: 20px;">
    <a asp-page="Index" class="btn btn-secondary">‚Üê Back to Exams</a>
</div>

<h3 style="color: #2d3748; margin-bottom: 24px;">Create New Exam</h3>

<form method="post" style="max-width: 700px;">
    <div asp-validation-summary="ModelOnly" class="alert alert-error" style="margin-bottom: 20px;"></div>

    <div class="form-group">
        <label asp-for="ExamInput.SubjectId">Subject</label>
        <select asp-for="ExamInput.SubjectId" asp-items="Model.Subjects" class="form-control">
            <option value="">-- Select Subject --</option>
        </select>
        <span asp-validation-for="ExamInput.SubjectId" style="color: #e53e3e; font-size: 12px;"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExamInput.SemesterId">Semester</label>
        <select asp-for="ExamInput.SemesterId" asp-items="Model.Semesters" class="form-control">
            <option value="">-- Select Semester --</option>
        </select>
        <span asp-validation-for="ExamInput.SemesterId" style="color: #e53e3e; font-size: 12px;"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExamInput.Name">Exam Name</label>
        <input asp-for="ExamInput.Name" type="text" placeholder="e.g., Midterm Exam" />
        <span asp-validation-for="ExamInput.Name" style="color: #e53e3e; font-size: 12px;"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExamInput.Description">Description (Optional)</label>
        <textarea asp-for="ExamInput.Description" rows="4" style="width: 100%; padding: 10px 12px; border: 1px solid #e2e8f0; border-radius: 6px; font-size: 14px;" 
                  placeholder="Enter exam description..."></textarea>
        <span asp-validation-for="ExamInput.Description" style="color: #e53e3e; font-size: 12px;"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExamInput.ExamDate">Exam Date</label>
        <input asp-for="ExamInput.ExamDate" type="date" />
        <span asp-validation-for="ExamInput.ExamDate" style="color: #e53e3e; font-size: 12px;"></span>
    </div>

    <div style="display: flex; gap: 10px; margin-top: 24px;">
        <button type="submit" class="btn btn-primary">Create Exam</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
