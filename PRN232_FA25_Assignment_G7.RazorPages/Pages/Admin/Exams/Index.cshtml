@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Admin.Exams.IndexModel
@{
    ViewData["Title"] = "Exam Management";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h3 style="color: #2d3748; margin: 0;">Exams</h3>
    <a asp-page="Create" class="btn btn-primary">+ Create New Exam</a>
</div>

<div style="margin-bottom: 20px;">
    <form method="get" style="display: flex; gap: 10px;">
        <input type="text" 
               name="search" 
               value="@Model.SearchTerm" 
               placeholder="Search by exam name, subject, or semester..." 
               style="flex: 1; max-width: 500px;" />
        <button type="submit" class="btn btn-secondary">Search</button>
        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
        {
            <a asp-page="Index" class="btn btn-secondary">Clear</a>
        }
    </form>
</div>

@if (Model.Exams.Count == 0)
{
    <div style="text-align: center; padding: 40px; color: #718096;">
        <div style="font-size: 48px; margin-bottom: 16px;">üìù</div>
        <p>No exams found. Create your first exam to get started.</p>
    </div>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Exam Name</th>
                <th>Subject</th>
                <th>Semester</th>
                <th>Exam Date</th>
                <th style="width: 200px; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exam in Model.Exams)
            {
                <tr>
                    <td><strong>@exam.Name</strong></td>
                    <td>@exam.SubjectName</td>
                    <td>@exam.SemesterName</td>
                    <td>@exam.ExamDate.ToString("MMM dd, yyyy")</td>
                    <td style="text-align: center;">
                        <a asp-page="Details" asp-route-id="@exam.Id" class="btn btn-secondary" style="padding: 6px 12px; margin-right: 8px;">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <form method="post" asp-page-handler="Delete" asp-route-id="@exam.Id" style="display: inline;" 
                                  onsubmit="return confirm('Are you sure you want to delete this exam?');">
                                <button type="submit" class="btn btn-danger" style="padding: 6px 12px;">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 20px; color: #718096; font-size: 14px;">
        Showing @Model.Exams.Count exam(s)
    </div>
}
