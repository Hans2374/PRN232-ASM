@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Admin.Rubrics.IndexModel
@{
    ViewData["Title"] = "Rubrics Management";
}

<h2>Rubrics Management</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    <a asp-page="./Create" class="btn btn-primary">Create New Rubric</a>
</div>

@if (Model.Rubrics.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Max Score</th>
                <th>Exam</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rubric in Model.Rubrics)
            {
                <tr>
                    <td>@rubric.Id</td>
                    <td>@rubric.Name</td>
                    <td>@rubric.Description</td>
                    <td>@rubric.MaxScore</td>
                    <td>@rubric.ExamName</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@rubric.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@rubric.Id" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this rubric?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No rubrics found. Create one to get started.</p>
}
