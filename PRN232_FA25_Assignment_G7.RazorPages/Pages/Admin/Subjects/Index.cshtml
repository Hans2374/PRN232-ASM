@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Admin.Subjects.IndexModel
@{
    ViewData["Title"] = "Subject Management";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h3 style="color: #2d3748; margin: 0;">Subjects</h3>
    <a asp-page="Create" class="btn btn-primary">+ Create New Subject</a>
</div>

<div style="margin-bottom: 20px;">
    <form method="get" style="display: flex; gap: 10px;">
        <input type="text" 
               name="search" 
               value="@Model.SearchTerm" 
               placeholder="Search by code or name..." 
               style="flex: 1; max-width: 400px;" />
        <button type="submit" class="btn btn-secondary">Search</button>
        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
        {
            <a asp-page="Index" class="btn btn-secondary">Clear</a>
        }
    </form>
</div>

@if (Model.Subjects.Count == 0)
{
    <div style="text-align: center; padding: 40px; color: #718096;">
        <div style="font-size: 48px; margin-bottom: 16px;">ðŸ“š</div>
        <p>No subjects found. Create your first subject to get started.</p>
    </div>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th style="width: 200px; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model.Subjects)
            {
                <tr>
                    <td><strong>@subject.Code</strong></td>
                    <td>@subject.Name</td>
                    <td style="text-align: center;">
                        <a asp-page="Edit" asp-route-id="@subject.Id" class="btn btn-secondary" style="padding: 6px 12px; margin-right: 8px;">Edit</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <form method="post" asp-page-handler="Delete" asp-route-id="@subject.Id" style="display: inline;" 
                                  onsubmit="return confirm('Are you sure you want to delete this subject?');">
                                <button type="submit" class="btn btn-danger" style="padding: 6px 12px;">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 20px; color: #718096; font-size: 14px;">
        Showing @Model.Subjects.Count subject(s)
    </div>
}
