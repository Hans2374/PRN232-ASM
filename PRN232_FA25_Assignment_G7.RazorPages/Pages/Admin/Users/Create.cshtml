@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "Create New User";
}

<div style="margin-bottom: 24px;">
    <h3 style="color: #2d3748; margin-bottom: 8px;">Create New User</h3>
    <p style="color: #718096;">Fill in the details to create a new user account.</p>
</div>

<form method="post" style="max-width: 600px;">
    <div asp-validation-summary="ModelOnly" class="alert alert-error"></div>

    <div class="form-group">
        <label asp-for="UserRequest.Username">Username</label>
        <input asp-for="UserRequest.Username" type="text" placeholder="Enter username" />
        <span asp-validation-for="UserRequest.Username" style="color: #c53030; font-size: 12px;"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserRequest.Password">Password</label>
        <input asp-for="UserRequest.Password" type="password" placeholder="Enter password (min 6 characters)" />
        <span asp-validation-for="UserRequest.Password" style="color: #c53030; font-size: 12px;"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserRequest.FullName">Full Name</label>
        <input asp-for="UserRequest.FullName" type="text" placeholder="Enter full name" />
        <span asp-validation-for="UserRequest.FullName" style="color: #c53030; font-size: 12px;"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserRequest.Email">Email</label>
        <input asp-for="UserRequest.Email" type="email" placeholder="Enter email address" />
        <span asp-validation-for="UserRequest.Email" style="color: #c53030; font-size: 12px;"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserRequest.Role">Role</label>
        <select asp-for="UserRequest.Role">
            <option value="Admin">Admin - Full system access</option>
            <option value="Manager">Manager - Limited access</option>
            <option value="Moderator">Moderator - Exam oversight</option>
            <option value="Examiner" selected>Examiner - Grading only</option>
        </select>
        <span asp-validation-for="UserRequest.Role" style="color: #c53030; font-size: 12px;"></span>
    </div>

    <div style="margin-top: 30px; display: flex; gap: 12px;">
        <button type="submit" class="btn btn-primary">Create User</button>
        <a href="/Admin/Users/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
