@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "Create New User";
}

<div style="margin-bottom: 24px;">
    <h3 style="color: #2d3748; margin-bottom: 8px; font-size: 24px; font-weight: 600;">Create New User</h3>
    <p style="color: #718096;">Fill in the details to create a new user account. All fields are required.</p>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-error" style="margin-bottom: 20px;">
        @TempData["Error"]
    </div>
}

<form method="post" style="max-width: 600px;">
    <div asp-validation-summary="ModelOnly" class="alert alert-error" style="margin-bottom: 20px;"></div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="UserInput.Username" style="display: block; margin-bottom: 6px; font-weight: 500; color: #2d3748;">Username *</label>
        <input asp-for="UserInput.Username" type="text" placeholder="Enter username (3-50 characters)" 
               style="width: 100%; padding: 10px; border: 1px solid #cbd5e0; border-radius: 4px; font-size: 14px;" />
        <span asp-validation-for="UserInput.Username" style="color: #c53030; font-size: 12px; display: block; margin-top: 4px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="UserInput.Password" style="display: block; margin-bottom: 6px; font-weight: 500; color: #2d3748;">Password *</label>
        <input asp-for="UserInput.Password" type="password" placeholder="Enter password (minimum 6 characters)" 
               style="width: 100%; padding: 10px; border: 1px solid #cbd5e0; border-radius: 4px; font-size: 14px;" />
        <span asp-validation-for="UserInput.Password" style="color: #c53030; font-size: 12px; display: block; margin-top: 4px;"></span>
        <small style="color: #718096; font-size: 12px; display: block; margin-top: 4px;">Password must be at least 6 characters long</small>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="UserInput.FullName" style="display: block; margin-bottom: 6px; font-weight: 500; color: #2d3748;">Full Name *</label>
        <input asp-for="UserInput.FullName" type="text" placeholder="Enter full name" 
               style="width: 100%; padding: 10px; border: 1px solid #cbd5e0; border-radius: 4px; font-size: 14px;" />
        <span asp-validation-for="UserInput.FullName" style="color: #c53030; font-size: 12px; display: block; margin-top: 4px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="UserInput.Email" style="display: block; margin-bottom: 6px; font-weight: 500; color: #2d3748;">Email Address *</label>
        <input asp-for="UserInput.Email" type="email" placeholder="user@example.com" 
               style="width: 100%; padding: 10px; border: 1px solid #cbd5e0; border-radius: 4px; font-size: 14px;" />
        <span asp-validation-for="UserInput.Email" style="color: #c53030; font-size: 12px; display: block; margin-top: 4px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="UserInput.Role" style="display: block; margin-bottom: 6px; font-weight: 500; color: #2d3748;">Role *</label>
        <select asp-for="UserInput.Role" asp-items="Model.AvailableRoles"
                style="width: 100%; padding: 10px; border: 1px solid #cbd5e0; border-radius: 4px; font-size: 14px; background-color: white;">
        </select>
        <span asp-validation-for="UserInput.Role" style="color: #c53030; font-size: 12px; display: block; margin-top: 4px;"></span>
        <small style="color: #718096; font-size: 12px; display: block; margin-top: 4px;">Select the appropriate role based on user responsibilities</small>
    </div>

    <div style="margin-top: 30px; display: flex; gap: 12px; padding-top: 20px; border-top: 1px solid #e2e8f0;">
        <button type="submit" class="btn btn-primary" 
                style="padding: 10px 24px; background-color: #3182ce; color: white; border: none; border-radius: 4px; font-weight: 500; cursor: pointer;">
            Create User
        </button>
        <a href="/Admin/Users/Index" class="btn btn-secondary" 
           style="padding: 10px 24px; background-color: #718096; color: white; border: none; border-radius: 4px; font-weight: 500; text-decoration: none; display: inline-block;">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

