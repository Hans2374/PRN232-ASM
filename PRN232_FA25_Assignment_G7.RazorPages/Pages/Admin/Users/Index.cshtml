@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h3 style="color: #2d3748; margin: 0;">User Management</h3>
    <a asp-page="Create" class="btn btn-primary">+ Create New User</a>
</div>

<!-- Search Bar -->
<form method="get" style="margin-bottom: 24px;">
    <div style="display: flex; gap: 12px; max-width: 600px;">
        <input type="text" 
               name="SearchTerm" 
               value="@Model.SearchTerm" 
               placeholder="Search by username, name, email, or role..." 
               style="flex: 1; padding: 10px 14px; border: 1px solid #e2e8f0; border-radius: 6px; font-size: 14px;" />
        <button type="submit" class="btn btn-secondary">Search</button>
        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
        {
            <a asp-page="Index" class="btn btn-secondary">Clear</a>
        }
    </div>
</form>

@if (Model.Users.Count == 0 && string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <div style="text-align: center; padding: 60px 20px; color: #718096; background: #f7fafc; border-radius: 8px;">
        <div style="font-size: 48px; margin-bottom: 16px;">ðŸ‘¥</div>
        <h4 style="color: #4a5568; margin-bottom: 12px;">No Users Found</h4>
        <p style="margin-bottom: 24px;">Get started by creating your first user.</p>
        <a asp-page="Create" class="btn btn-primary">Create User</a>
    </div>
}
else if (Model.Users.Count == 0 && !string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <div style="text-align: center; padding: 40px; color: #718096; background: #f7fafc; border-radius: 8px;">
        <p>No users found matching "<strong>@Model.SearchTerm</strong>"</p>
        <a asp-page="Index" class="btn btn-secondary" style="margin-top: 16px;">Clear Search</a>
    </div>
}
else
{
    <div style="overflow-x: auto;">
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th style="width: 100px; text-align: center;">Status</th>
                    <th style="width: 140px; text-align: center;">Created</th>
                    <th style="width: 180px; text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td><strong>@user.Username</strong></td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge" style="background: @GetRoleBadgeColor(user.Role); color: white; padding: 4px 12px;">
                                @user.Role
                            </span>
                        </td>
                        <td style="text-align: center;">
                            @if (user.IsActive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge" style="background: #cbd5e0; color: #2d3748;">Inactive</span>
                            }
                        </td>
                        <td style="text-align: center; font-size: 13px; color: #718096;">
                            @user.CreatedAt.ToString("MMM dd, yyyy")
                        </td>
                        <td style="text-align: center;">
                            <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-secondary" style="padding: 6px 14px; margin-right: 6px;">
                                Edit
                            </a>
                            @if (user.IsActive)
                            {
                                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" style="display: inline;">
                                    <button type="submit" 
                                            class="btn btn-danger" 
                                            style="padding: 6px 14px;"
                                            onclick="return confirm('Are you sure you want to deactivate @user.Username?');">
                                        Deactivate
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="margin-top: 20px; padding: 12px; background: #f7fafc; border-radius: 6px; color: #4a5568; font-size: 14px;">
        <strong>Total:</strong> @Model.Users.Count user(s)
        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
        {
            <span style="margin-left: 16px;">| Filtered by: <strong>@Model.SearchTerm</strong></span>
        }
    </div>
}

@functions {
    string GetRoleBadgeColor(string role)
    {
        return role switch
        {
            "Admin" => "#dc2626",
            "Manager" => "#2563eb",
            "Moderator" => "#7c3aed",
            "Examiner" => "#059669",
            _ => "#6b7280"
        };
    }
}
