@page "{id}"
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Examiner.Submissions.DoubleGradeModel
@{
    ViewData["Title"] = "Double Grade Submission";
}

<h2>Second Assessment</h2>

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Submission != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5>Submission Details</h5>
        </div>
        <div class="card-body">
            <p><strong>Student:</strong> @Model.Submission.StudentName</p>
            <p><strong>Submitted At:</strong> @Model.Submission.SubmittedAt</p>
            <p><strong>File:</strong> <a href="@Model.Submission.FileUrl" target="_blank">Download</a></p>
        </div>
    </div>

    <form method="post">
        <div class="card">
            <div class="card-header">
                <h5>Rubric Assessment</h5>
            </div>
            <div class="card-body">
                @if (Model.Rubric != null)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Criteria</th>
                                <th>Max Score</th>
                                <th>First Examiner Score</th>
                                <th>Your Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Rubric.Count; i++)
                            {
                                var item = Model.Rubric[i];
                                <tr>
                                    <td>@item.Description</td>
                                    <td>@item.MaxScore</td>
                                    <td>@(Model.FirstExaminerScores?.TryGetValue(item.Id, out var firstScore) == true ? firstScore.ToString() : "-")</td>
                                    <td>
                                        <input type="hidden" asp-for="Input.Scores[i].ItemId" value="@item.Id" />
                                        <input type="number" asp-for="Input.Scores[i].Score" min="0" max="@item.MaxScore" class="form-control" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                <div class="mb-3">
                    <label for="Comments" class="form-label">Comments</label>
                    <textarea asp-for="Input.Comments" class="form-control" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit Double Grade</button>
                <a asp-page="/Examiner/Submissions/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
}
else
{
    <p>No submission found.</p>
}