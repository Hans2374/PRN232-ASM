@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Examiner.Violations.IndexModel
@{
    ViewData["Title"] = "My Violations";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Violations != null && Model.Violations.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Reason</th>
                <th>Reported At</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var violation in Model.Violations)
            {
                <tr>
                    <td>@violation.Reason</td>
                    <td>@violation.ReportedAt.ToString("g")</td>
                    <td>
                        <span class="badge bg-@(violation.Status == "Resolved" ? "success" : violation.Status?.Contains("Pending") == true ? "warning" : "secondary")">
                            @violation.Status
                        </span>
                    </td>
                    <td>
                        <a asp-page="/Examiner/Violations/Details" asp-route-id="@violation.Id" class="btn btn-primary btn-sm">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No violations reported yet.</p>
}
