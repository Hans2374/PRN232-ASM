@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Manager.DashboardModel
@{
    ViewData["Title"] = "Manager Dashboard";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (Model.Data != null)
{
    <div class="row">
        <div class="col-md-3">
            <div class="card text-bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Examiners</h5>
                    <p class="card-text fs-2">@Model.Data.TotalExaminers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Exams</h5>
                    <p class="card-text fs-2">@Model.Data.TotalExams</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Submissions Awaiting Review</h5>
                    <p class="card-text fs-2">@Model.Data.SubmissionsAwaitingReview</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Violation Reports</h5>
                    <p class="card-text fs-2">@Model.Data.ViolationReports</p>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Grading Progress Summary</h5>
                <p class="card-text fs-4">@Model.Data.GradingProgress% completed</p>
                <div class="progress mt-2">
                    <div class="progress-bar" role="progressbar" style="width: @Model.Data.GradingProgress%" aria-valuenow="@Model.Data.GradingProgress" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
}
