@page "{id}"
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Manager.Examiners.DetailsModel
@{
    ViewData["Title"] = "Examiner Details";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (Model.Examiner != null)
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Personal Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.Examiner.Name</p>
                    <p><strong>Email:</strong> @Model.Examiner.Email</p>
                    <p><strong>Phone:</strong> @Model.Examiner.Phone</p>
                    <p><strong>Status:</strong> <span class="badge bg-@(Model.Examiner.Status == "Active" ? "success" : "secondary")">@Model.Examiner.Status</span></p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Performance Stats</h5>
                </div>
                <div class="card-body">
                    <p><strong>Total Graded:</strong> @Model.Examiner.Performance.TotalGraded</p>
                    <p><strong>Average Score:</strong> @Model.Examiner.Performance.AverageScore:F2</p>
                    <p><strong>Violations Reported:</strong> @Model.Examiner.Performance.ViolationsReported</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="card">
            <div class="card-header">
                <h5>Assigned Exams</h5>
            </div>
            <div class="card-body">
                @if (Model.Examiner.AssignedExams.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Exam Name</th>
                                    <th>Subject</th>
                                    <th>Exam Date</th>
                                    <th>Total Submissions</th>
                                    <th>Graded Submissions</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var exam in Model.Examiner.AssignedExams)
                                {
                                    <tr>
                                        <td>@exam.ExamName</td>
                                        <td>@exam.SubjectName</td>
                                        <td>@exam.ExamDate.ToString("yyyy-MM-dd")</td>
                                        <td>@exam.TotalSubmissions</td>
                                        <td>@exam.GradedSubmissions</td>
                                        <td>
                                            <a asp-page="/Manager/Submissions/Index" asp-route-examId="@exam.ExamId" class="btn btn-sm btn-outline-primary">View Submissions</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No assigned exams.</p>
                }
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="/Manager/Examiners/Index" class="btn btn-secondary">Back to List</a>
        <a asp-page="/Manager/Exams/Assign" asp-route-examinerId="@Model.Examiner.Id" class="btn btn-primary ms-2">Assign Exam</a>
    </div>
}
else
{
    <div class="alert alert-warning">Examiner not found.</div>
}