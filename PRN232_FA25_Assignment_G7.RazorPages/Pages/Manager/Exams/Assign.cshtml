@page "{examId}"
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Manager.Exams.AssignModel
@{
    ViewData["Title"] = "Assign Examiner to Exam";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card">
    <div class="card-header">
        <h5>Assign Examiner to: @Model.ExamName</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.ExaminerId" class="form-label">Select Examiner</label>
                <select asp-for="Input.ExaminerId" asp-items="Model.AvailableExaminers" class="form-select" required>
                    <option value="">Choose an examiner...</option>
                </select>
                <span asp-validation-for="Input.ExaminerId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Assign Examiner</button>
            <a asp-page="/Manager/Exams/Details" asp-route-id="@Model.ExamId" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
