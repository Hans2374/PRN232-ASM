@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Manager.Exams.IndexModel
@{
    ViewData["Title"] = "Manage Exams";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (Model.Exams != null && Model.Exams.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Exam Name</th>
                    <th>Subject</th>
                    <th>Semester</th>
                    <th>Examiners</th>
                    <th>Submissions</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model.Exams)
                {
                    <tr>
                        <td>@exam.ExamName</td>
                        <td>@exam.SubjectName</td>
                        <td>@exam.SemesterName</td>
                        <td>@exam.ExaminersCount</td>
                        <td>@exam.SubmissionsCount</td>
                        <td>
                            <a asp-page="/Manager/Exams/Details" asp-route-id="@exam.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                            <a asp-page="/Manager/Exams/Assign" asp-route-examId="@exam.Id" class="btn btn-sm btn-outline-info ms-1">Assign Examiner</a>
                            <a asp-page="/Manager/Submissions/Index" asp-route-examId="@exam.Id" class="btn btn-sm btn-outline-success ms-1">View Submissions</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">No exams found.</div>
}