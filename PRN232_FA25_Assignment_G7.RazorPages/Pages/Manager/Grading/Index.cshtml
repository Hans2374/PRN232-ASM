@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Manager.Grading.IndexModel
@{
    ViewData["Title"] = "Grading Overview";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (Model.GradingOverview != null && Model.GradingOverview.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Exam</th>
                    <th>Graded Submissions</th>
                    <th>Double Grade Required</th>
                    <th>Pending Manager Verification</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.GradingOverview)
                {
                    <tr>
                        <td>@item.ExamName</td>
                        <td>@item.GradedSubmissions</td>
                        <td>@item.DoubleGradeRequired</td>
                        <td>@item.PendingManagerVerification</td>
                        <td>
                            <a asp-page="/Manager/Grading/Reconcile" asp-route-submissionId="@item.ExamId" class="btn btn-sm btn-outline-primary">View Breakdown</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">No grading data available.</div>
}
