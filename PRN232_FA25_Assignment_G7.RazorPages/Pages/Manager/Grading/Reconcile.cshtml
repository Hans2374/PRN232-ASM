@page "{submissionId}"
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Manager.Grading.ReconcileModel
@{
    ViewData["Title"] = "Double Grading Reconciliation";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (Model.Data != null)
{
    <div class="card">
        <div class="card-header">
            <h5>Submission Details</h5>
        </div>
        <div class="card-body">
            <p><strong>Student Code:</strong> @Model.Data.StudentCode</p>
            <p><strong>Exam:</strong> @Model.Data.ExamName</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>First Examiner: @Model.Data.FirstExaminerName</h5>
                </div>
                <div class="card-body">
                    <h3 class="text-primary">@Model.Data.FirstExaminerScore</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Second Examiner: @Model.Data.SecondExaminerName</h5>
                </div>
                <div class="card-body">
                    <h3 class="text-success">@Model.Data.SecondExaminerScore</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h5>Manager Reconciliation</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.FinalScore" class="form-label">Final Score</label>
                    <input asp-for="Input.FinalScore" type="number" step="0.01" min="0" max="10" class="form-control" required />
                    <span asp-validation-for="Input.FinalScore" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Comments" class="form-label">Comments (Required)</label>
                    <textarea asp-for="Input.Comments" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="Input.Comments" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit Reconciliation</button>
                <a asp-page="/Manager/Grading/Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Grading data not found.</div>
}