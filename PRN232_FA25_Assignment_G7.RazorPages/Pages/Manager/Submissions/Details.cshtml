@page "{id}"
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Manager.Submissions.DetailsModel
@{
    ViewData["Title"] = "Submission Details";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (Model.Submission != null)
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Submission Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Student Code:</strong> @Model.Submission.StudentCode</p>
                    <p><strong>Exam:</strong> @Model.Submission.ExamName</p>
                    <p><strong>Submitted At:</strong> @Model.Submission.SubmittedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <p><strong>Status:</strong> <span class="badge bg-@(Model.Submission.Status == "Graded" ? "success" : Model.Submission.Status == "Pending" ? "warning" : "info")">@Model.Submission.Status</span></p>
                    <p><strong>File Type:</strong> @Model.Submission.FileType</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Submission File</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Submission.FileUrl))
                    {
                        if (Model.Submission.FileType.Contains("pdf"))
                        {
                            <iframe src="@Model.Submission.FileUrl" width="100%" height="400px"></iframe>
                        }
                        else if (Model.Submission.FileType.Contains("image"))
                        {
                            <img src="@Model.Submission.FileUrl" class="img-fluid" alt="Submission file" />
                        }
                        else
                        {
                            <a href="@Model.Submission.FileUrl" target="_blank" class="btn btn-primary">Download File</a>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No file available.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="card">
            <div class="card-header">
                <h5>Grading History</h5>
            </div>
            <div class="card-body">
                @if (Model.GradingHistory != null && Model.GradingHistory.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Examiner</th>
                                    <th>Graded At</th>
                                    <th>Score</th>
                                    <th>Comments</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var history in Model.GradingHistory)
                                {
                                    <tr>
                                        <td>@history.ExaminerName</td>
                                        <td>@history.GradedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@history.Score</td>
                                        <td>@history.Comments</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No grading history available.</p>
                }
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="/Manager/Submissions/Index" asp-route-examId="TODO" class="btn btn-secondary">Back to Submissions</a>
        <button type="button" class="btn btn-warning ms-2" onclick="requestRegrade()">Request Re-grade</button>
        <a asp-page="/Manager/Examiners/Details" asp-route-id="TODO" class="btn btn-info ms-2">View Examiner</a>
    </div>
}
else
{
    <div class="alert alert-warning">Submission not found.</div>
}

<script>
    function requestRegrade() {
        if (confirm('Are you sure you want to request a re-grade for this submission?')) {
            // Implement re-grade request
            alert('Re-grade request sent.');
        }
    }
</script>