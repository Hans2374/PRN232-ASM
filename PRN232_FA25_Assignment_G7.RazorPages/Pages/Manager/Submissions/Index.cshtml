@page "{examId?}"
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Manager.Submissions.IndexModel
@{
    ViewData["Title"] = Model.ExamId != Guid.Empty ? "Submissions for " + Model.ExamName : "Submission Monitoring";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (Model.ExamId != Guid.Empty)
{
    <!-- Detailed submissions view for specific exam -->
    <div class="mb-3">
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Exam Overview
        </a>
    </div>

    @if (Model.Submissions != null && Model.Submissions.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Student ID</th>
                        <th>Submission Time</th>
                        <th>Status</th>
                        <th>Examiner</th>
                        <th>Flags/Violations</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submission in Model.Submissions)
                    {
                        <tr>
                            <td>@submission.StudentCode</td>
                            <td>@submission.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <span class="badge bg-@(submission.Status == "Graded" ? "success" : submission.Status == "Pending" ? "warning" : submission.Status == "Flagged" ? "danger" : "info")">
                                    @submission.Status
                                </span>
                            </td>
                            <td>@submission.ExaminerName</td>
                            <td>
                                @if (submission.HasViolations)
                                {
                                    <span class="badge bg-danger">⚠️ Violation</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <a asp-page="/Manager/Submissions/Details" asp-route-id="@submission.Id" class="btn btn-sm btn-outline-primary">View</a>
                                <a asp-page="/Manager/Submissions/Details" asp-route-id="@submission.Id" asp-route-action="grade" class="btn btn-sm btn-outline-success ms-1">Grade</a>
                                <button type="button" class="btn btn-sm btn-outline-warning ms-1" onclick="requestRegrade('@submission.Id')">Request Re-grade</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No submissions found for this exam.</div>
    }

    <div class="mt-3">
        <a asp-page="/Manager/Exams/Details" asp-route-id="@Model.ExamId" class="btn btn-secondary">Back to Exam</a>
    </div>
}
else
{
    <!-- Exam summary overview -->
    <p class="text-muted">Select an exam below to view detailed submission information.</p>

    @if (Model.ExamSummaries != null && Model.ExamSummaries.Any())
    {
        <div class="row">
            @foreach (var exam in Model.ExamSummaries)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h6 class="card-title mb-0">@exam.ExamName</h6>
                            <small class="text-muted">@exam.SubjectName</small>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="border-end">
                                        <h4 class="text-primary">@exam.TotalSubmissions</h4>
                                        <small class="text-muted">Total</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-warning">@exam.PendingSubmissions</h4>
                                    <small class="text-muted">Pending</small>
                                </div>
                            </div>
                            <div class="row text-center mt-2">
                                <div class="col-6">
                                    <div class="border-end">
                                        <h4 class="text-success">@exam.GradedSubmissions</h4>
                                        <small class="text-muted">Graded</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-danger">@exam.FlaggedSubmissions</h4>
                                    <small class="text-muted">Flagged</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-page="./Index" asp-route-examId="@exam.Id" class="btn btn-primary btn-sm w-100">
                                View Submissions
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">No exams with submissions found.</div>
    }
}

