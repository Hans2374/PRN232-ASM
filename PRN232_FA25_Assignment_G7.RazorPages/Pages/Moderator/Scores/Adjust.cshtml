@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Moderator.Scores.AdjustModel
@{
    ViewData["Title"] = "Adjust Score";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="post">
    <div class="mb-3">
        <label class="form-label">Submission ID</label>
        <input asp-for="Input.SubmissionId" type="number" class="form-control" />
        <span asp-validation-for="Input.SubmissionId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Final Score</label>
        <input asp-for="Input.FinalScore" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Input.FinalScore" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Moderator Comments</label>
        <textarea asp-for="Input.ModeratorComments" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Input.ModeratorComments" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Adjust Score</button>
</form>
