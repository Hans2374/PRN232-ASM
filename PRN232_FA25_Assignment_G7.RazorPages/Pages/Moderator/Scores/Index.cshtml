@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Moderator.Scores.IndexModel
@{
    ViewData["Title"] = "Score Moderation";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="SearchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="SearchTerm" name="SearchTerm"
                       value="@Model.SearchTerm" placeholder="Student ID, exam name, or examiner...">
            </div>
            <div class="col-md-4">
                <label for="StatusFilter" class="form-label">Status</label>
                <select class="form-select" id="StatusFilter" name="StatusFilter">
                    <option value="">All Statuses</option>
                    <option value="Pending" selected="@(Model.StatusFilter == "Pending")">Pending</option>
                    <option value="Approved" selected="@(Model.StatusFilter == "Approved")">Approved</option>
                    <option value="Rejected" selected="@(Model.StatusFilter == "Rejected")">Rejected</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Search</button>
                <a href="@Url.Page("./Index")" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Scores != null && Model.Scores.Any())
{
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Scores Requiring Review</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Submission ID</th>
                            <th>Student ID</th>
                            <th>Exam</th>
                            <th>Examiner Score</th>
                            <th>Auto Score</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var score in Model.Scores)
                        {
                            <tr>
                                <td>@score.SubmissionId</td>
                                <td>@score.StudentId</td>
                                <td>@score.ExamName</td>
                                <td>@score.ExaminerScore</td>
                                <td>@(score.AutoScore?.ToString("F2") ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-@(score.Status == "Pending" ? "warning" : score.Status == "Approved" ? "success" : "danger")">
                                        @score.Status
                                    </span>
                                </td>
                                <td>
                                    @if (score.Status == "Pending")
                                    {
                                        <a asp-page="./Review" asp-route-id="@score.Id" class="btn btn-sm btn-outline-primary">
                                            Review
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Reviewed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.StatusFilter))
        {
            <text>No scores found matching your search criteria.</text>
        }
        else
        {
            <text>No scores available for review.</text>
        }
    </div>
}