@page "{id:int}"
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Moderator.Scores.ReviewModel
@{
    ViewData["Title"] = "Review Score";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (Model.ScoreDetails != null)
{
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Submission Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Submission ID</dt>
                        <dd class="col-sm-8">@Model.ScoreDetails.SubmissionId</dd>

                        <dt class="col-sm-4">Student ID</dt>
                        <dd class="col-sm-8">@Model.ScoreDetails.StudentId</dd>

                        <dt class="col-sm-4">Student Name</dt>
                        <dd class="col-sm-8">@Model.ScoreDetails.StudentName</dd>

                        <dt class="col-sm-4">Exam</dt>
                        <dd class="col-sm-8">@Model.ScoreDetails.ExamName</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5>Scoring Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-primary">Examiner Score</h6>
                                    <h2 class="mb-0">@Model.ScoreDetails.ExaminerScore</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-info">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-info">Auto Score</h6>
                                    <h2 class="mb-0">@(Model.ScoreDetails.AutoScore?.ToString("F2") ?? "N/A")</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ScoreDetails.ExaminerComments))
                    {
                        <div class="mt-3">
                            <h6>Examiner Comments</h6>
                            <p class="text-muted">@Model.ScoreDetails.ExaminerComments</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ScoreDetails.Discrepancies))
                    {
                        <div class="mt-3">
                            <h6 class="text-warning">⚠️ Detected Discrepancies</h6>
                            <div class="alert alert-warning">
                                @Model.ScoreDetails.Discrepancies
                            </div>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ScoreDetails.SubmissionFileUrl))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Submission File</h5>
                    </div>
                    <div class="card-body">
                        <a href="@Model.ScoreDetails.SubmissionFileUrl" target="_blank" class="btn btn-outline-primary">
                            <i class="fas fa-file-alt me-2"></i>View Submission File
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            @if (Model.ScoreDetails.Status == "Pending")
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Moderator Decision</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Decision</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Decision" id="approve" value="Approve" checked>
                                    <label class="form-check-label" for="approve">
                                        <span class="badge bg-success me-2">✓</span>Approve Score
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Decision" id="reject" value="Reject">
                                    <label class="form-check-label" for="reject">
                                        <span class="badge bg-danger me-2">✗</span>Reject Score
                                    </label>
                                </div>
                                <span asp-validation-for="Decision" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label for="Comments" class="form-label">Comments</label>
                                <textarea class="form-control" id="Comments" name="Comments" rows="4"
                                          placeholder="Optional comments for approval, required for rejection..."
                                          asp-for="Comments"></textarea>
                                <span asp-validation-for="Comments" class="text-danger"></span>
                                <div class="form-text">Comments are required when rejecting a score.</div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Submit Decision</button>
                                <a asp-page="./Index" class="btn btn-outline-secondary">Back to Scores</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="text-muted">Score Already Reviewed</h5>
                        <span class="badge bg-@(Model.ScoreDetails.Status == "Approved" ? "success" : "danger") fs-6">
                            @Model.ScoreDetails.Status
                        </span>
                        <br><br>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Back to Scores</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Score not found.</div>
}