@page
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Moderator.Violations.HistoryModel
@{
    ViewData["Title"] = "Violation History";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Data != null && Model.Data.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Student</th>
                <th>Exam</th>
                <th>Description</th>
                <th>Status</th>
                <th>Reviewed By</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var violation in Model.Data)
            {
                <tr>
                    <td>@violation.Id</td>
                    <td>@violation.StudentName</td>
                    <td>@violation.ExamName</td>
                    <td>@violation.Description</td>
                    <td>@violation.ReviewStatus</td>
                    <td>@(violation.ReviewedBy ?? "-")</td>
                    <td>@violation.CreatedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No violation history found.</p>
}
