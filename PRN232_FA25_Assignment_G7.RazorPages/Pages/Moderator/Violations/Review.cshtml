@page "{id:int}"
@model PRN232_FA25_Assignment_G7.RazorPages.Pages.Moderator.Violations.ReviewModel
@{
    ViewData["Title"] = "Review Violation";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-warning">@TempData["AuthError"]</div>
}

@if (Model.ViolationDetails != null)
{
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Violation Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Violation ID</dt>
                        <dd class="col-sm-8">@Model.ViolationDetails.Id</dd>

                        <dt class="col-sm-4">Submission ID</dt>
                        <dd class="col-sm-8">@Model.ViolationDetails.SubmissionId</dd>

                        <dt class="col-sm-4">Student ID</dt>
                        <dd class="col-sm-8">@Model.ViolationDetails.StudentId</dd>

                        <dt class="col-sm-4">Student Name</dt>
                        <dd class="col-sm-8">@Model.ViolationDetails.StudentName</dd>

                        <dt class="col-sm-4">Exam</dt>
                        <dd class="col-sm-8">@Model.ViolationDetails.ExamName</dd>

                        <dt class="col-sm-4">Reported By</dt>
                        <dd class="col-sm-8">@Model.ViolationDetails.ExaminerName</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.ViolationDetails.Type</span>
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.ViolationDetails.Status == "Pending" ? "warning" : Model.ViolationDetails.Status == "Approved" ? "success" : Model.ViolationDetails.Status == "Rejected" ? "danger" : "info")">
                                @Model.ViolationDetails.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Reported At</dt>
                        <dd class="col-sm-8">@Model.ViolationDetails.ReportedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.ViolationDetails.Description))
                    {
                        <div class="mt-3">
                            <h6>Description</h6>
                            <p>@Model.ViolationDetails.Description</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ViolationDetails.Evidence))
                    {
                        <div class="mt-3">
                            <h6>Evidence</h6>
                            <div class="alert alert-info">
                                @Model.ViolationDetails.Evidence
                            </div>
                        </div>
                    }
                </div>
            </div>

            @if (Model.ViolationDetails.Timeline != null && Model.ViolationDetails.Timeline.Any())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Violation Timeline</h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            @foreach (var item in Model.ViolationDetails.Timeline.OrderByDescending(t => t.Timestamp))
                            {
                                <div class="timeline-item mb-3">
                                    <div class="timeline-marker bg-primary"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">@item.Action</h6>
                                        <small class="text-muted">@item.Timestamp.ToString("yyyy-MM-dd HH:mm") by @item.Actor</small>
                                        @if (!string.IsNullOrEmpty(item.Details))
                                        {
                                            <p class="mt-2 mb-0">@item.Details</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            @if (Model.ViolationDetails.Status == "Pending")
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Moderator Decision</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Decision</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Decision" id="approve" value="Approve" checked>
                                    <label class="form-check-label" for="approve">
                                        <span class="badge bg-success me-2">✓</span>Approve Violation
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Decision" id="reject" value="Reject">
                                    <label class="form-check-label" for="reject">
                                        <span class="badge bg-danger me-2">✗</span>Reject Violation
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Decision" id="escalate" value="Escalate">
                                    <label class="form-check-label" for="escalate">
                                        <span class="badge bg-warning me-2">▲</span>Escalate to Manager
                                    </label>
                                </div>
                                <span asp-validation-for="Decision" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label for="Comments" class="form-label">Comments</label>
                                <textarea class="form-control" id="Comments" name="Comments" rows="4"
                                          placeholder="Optional for approval, required for reject/escalate..."
                                          asp-for="Comments"></textarea>
                                <span asp-validation-for="Comments" class="text-danger"></span>
                                <div class="form-text">Comments are required when rejecting or escalating.</div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Submit Decision</button>
                                <a asp-page="./Index" class="btn btn-outline-secondary">Back to Violations</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="text-muted">Violation Already Reviewed</h5>
                        <span class="badge bg-@(Model.ViolationDetails.Status == "Approved" ? "success" : Model.ViolationDetails.Status == "Rejected" ? "danger" : "info") fs-6">
                            @Model.ViolationDetails.Status
                        </span>
                        <br><br>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Back to Violations</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Violation not found.</div>
}

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        margin-left: -30px;
        padding-left: 40px;
    }

    .timeline-marker {
        position: absolute;
        left: -20px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #007bff;
    }

    .timeline-item:not(:last-child)::before {
        content: '';
        position: absolute;
        left: -16px;
        top: 17px;
        width: 2px;
        height: calc(100% - 12px);
        background: #e9ecef;
    }
</style>