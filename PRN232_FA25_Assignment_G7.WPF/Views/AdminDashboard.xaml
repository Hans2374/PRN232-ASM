<Window x:Class="PRN232_FA25_Assignment_G7.WPF.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:PRN232_FA25_Assignment_G7.WPF.Controls"
        xmlns:vm="clr-namespace:PRN232_FA25_Assignment_G7.WPF.ViewModels"
        mc:Ignorable="d"
        Title="Admin Dashboard - PRN232 Assignment System" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.DataContext>
        <vm:AdminDashboardViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" Background="#2D3748" BorderThickness="0,0,1,0" BorderBrush="#1A202C">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#1A202C" Padding="20,25">
                    <StackPanel>
                        <TextBlock Text="ðŸ“š PRN232" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Assignment System" 
                                   FontSize="12" 
                                   Foreground="#A0AEC0"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <controls:NavButton x:Name="DashboardBtn"
                                        Text="Dashboard" 
                                        Icon="ðŸ "
                                        IsActive="False"
                                        Visibility="Collapsed"
                                        Margin="0,0,0,5"/>
                    
                    <controls:NavButton x:Name="UsersBtn"
                                        Text="Users" 
                                        Icon="ðŸ‘¥"
                                        Command="{Binding NavigateUsersCommand}"
                                        Visibility="{Binding CanAccessUsers, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="0,0,0,5"/>
                    
                    <controls:NavButton x:Name="ExamsBtn"
                                        Text="Exams" 
                                        Icon="ðŸ“"
                                        Command="{Binding NavigateExamsCommand}"
                                        Visibility="{Binding CanAccessExams, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="0,0,0,5"/>
                    
                    <controls:NavButton x:Name="ReportsBtn"
                                        Text="Reports" 
                                        Icon="ðŸ“Š"
                                        Command="{Binding NavigateReportsCommand}"
                                        Visibility="{Binding CanAccessReports, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="0,0,0,5"/>
                </StackPanel>

                <!-- User Info & Logout -->
                <Border Grid.Row="2" Background="#1A202C" Padding="15">
                <StackPanel>
                    <Border Background="#2D3748" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="{Binding Username}" 
                                       Foreground="White" 
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                            <TextBlock Text="{Binding Role}" 
                                       Foreground="#A0AEC0" 
                                       FontSize="12"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <controls:NavButton Text="Logout" 
                                        Icon="ðŸšª"
                                        Command="{Binding LogoutCommand}"/>
                </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderThickness="0,0,0,1" 
                    BorderBrush="#E2E8F0"
                    Padding="30,20">
                <Grid>
                    <TextBlock Text="Welcome to Admin Dashboard" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="#2D3748"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content Frame -->
            <Border Grid.Row="1" Background="White" Margin="0">
                <Frame x:Name="ContentFrame" 
                       NavigationUIVisibility="Hidden"
                       Background="Transparent"/>
            </Border>
        </Grid>

        <!-- Toast Notification Overlay -->
        <controls:ToastHost x:Name="ToastHostControl"
                           Grid.Column="1"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,20,20,0"
                           Panel.ZIndex="999"/>
    </Grid>
</Window>
