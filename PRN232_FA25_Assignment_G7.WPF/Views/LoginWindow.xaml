<Window x:Class="PRN232_FA25_Assignment_G7.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PRN232_FA25_Assignment_G7.WPF.Views"
        Title="Admin Login"
        Height="400"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Value Converters -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <!-- Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White"
                CornerRadius="8"
                Margin="40"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="#AAAAAA" 
                                  BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Admin Login"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Username -->
                <TextBlock Text="Username"
                           FontSize="12"
                           Foreground="#666666"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,20"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           FontSize="12"
                           Foreground="#666666"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource ModernPasswordBox}"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Margin="0,0,0,20"/>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorTextBlock"
                           Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                        Height="40"
                        Margin="0,10,0,0"/>

                <!-- Loading Indicator -->
                <TextBlock Text="Logging in..."
                           FontSize="12"
                           Foreground="#007ACC"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
