<Page x:Class="PRN232_FA25_Assignment_G7.WPF.Views.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vm="clr-namespace:PRN232_FA25_Assignment_G7.WPF.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="950"
      Background="Transparent">

    <Page.DataContext>
        <vm:ReportsPageViewModel/>
    </Page.DataContext>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderThickness="0,0,0,2" 
                BorderBrush="#E2E8F0"
                Padding="0,0,0,20"
                Margin="0,0,0,20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Title}" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="#2D3748"/>
                    <TextBlock Text="Generate and export reports and analytics" 
                               FontSize="14" 
                               Foreground="#718096"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderThickness="1" 
                BorderBrush="#E2E8F0"
                CornerRadius="8"
                Padding="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“Š" 
                           FontSize="72" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <TextBlock Text="Reports &amp; Analytics" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           Foreground="#2D3748"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Export reports, analytics, and grading statistics" 
                           FontSize="14" 
                           Foreground="#718096"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="400"/>
                <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                    <Button Content="ðŸ“„ Export Excel" 
                            Background="#38A169" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            FontSize="14"
                            Cursor="Hand"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="ðŸ“ˆ View Analytics" 
                            Background="#3182CE" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,10"
                            FontSize="14"
                            Cursor="Hand"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
